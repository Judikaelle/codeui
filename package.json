{
	"name": "codeui",
	"displayName": "CodeUI",
	"publisher": "ryanraposo",
	"description": "Theme builder for Visual Studio Code",
	"icon": "resources/logo-blueprint-128x128.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "customizeElement",
				"title": "Edit",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "showElementInfo",
				"title": "Show element info"
			}

		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "elementTreeView",
					"title": "CodeUI",
					"icon": "resources/paintbrush.png"
				}
			]
		},
		"views": {
			"elementTreeView": [
				{
					"id": "elementInfo",
					"name": "Info"
				},
				{
					"id": "standardElementsView",
					"name": "Elements (standard view)"
				}
			]
		},
		"menus": {
			"view/title": [],
			"view/item/context": [
				{
					"command": "customizeElement",
					"arguments": [],
					"when": "viewItem == element",
					"group": "inline"
				},
				{
					"command": "showElementInfo",
					"arguements": [],
					"when": "viewItem == element"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/copy-paste": "^1.1.30",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.17.0",
		"typescript": "^3.5.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/color": "^3.0.0",
		"color": "^3.1.2",
		"copy-paste": "^1.3.0",
		"jsonc-parser": "^2.1.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ryanraposo/codeui"
	}
}
