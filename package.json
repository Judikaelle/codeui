{
	"name": "codeui",
	"displayName": "CodeUI",
	"publisher": "ryanraposo",
	"description": "Theme builder for Visual Studio Code",
	"icon": "resources/logo-blueprint-128x128.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "toggleView",
				"title": "Toggle Standard/Palette View",
				"icon" : "resources/buttons/eye_dark.svg"
			},
			{
				"command": "customizeGroup",
				"title" : "Customize all elements of this color...",
				"icon": "resources/buttons/button_edit.svg"

			},
			{
				"command": "customizeElement",
				"title": "Customize",
				"icon": "resources/buttons/button_edit.svg"
			},
			{
				"command": "clearCustomization",
				"title": "Delete",
				"icon": "resources/buttons/button_clear.svg"
			},
			{
				"command": "copy",
				"title": "Copy"
			},
			{
				"command": "paste",
				"title": "Paste"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "elementTreeView",
					"title": "CodeUI",
					"icon": "resources/paintbrush.png"
				}
			]
		},
		"views": {
			"elementTreeView": [
				{
					"id": "elementInfo",
					"name": "Info"
				},
				{
					"id": "elementsView",
					"name": "Elements"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "toggleView",
					"when": "view == elementsView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "customizeElement",
					"when": "viewItem == element",
					"group": "inline"
				},
				{
					"command": "clearCustomization",
					"when": "viewItem == element",
					"group": "inline"
				},
				{
					"command": "copy",
					"when": "viewItem == element"
				},
				{
					"command": "paste",
					"when": "viewItem == element"
				},
				{
					"command": "customizeGroup",
					"when" : "viewItem == group",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/copy-paste": "^1.1.30",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.17.0",
		"typescript": "^3.5.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/color": "^3.0.0",
		"code": "^5.2.4",
		"color": "^3.1.2",
		"copy-paste": "^1.3.0",
		"jsonc-parser": "^2.1.0",
		"vsce": "^1.64.0",
		"yo": "^3.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ryanraposo/codeui"
	}
}
