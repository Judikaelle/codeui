{
	"name": "codeui",
	"displayName": "CodeUI",
	"publisher": "ryanraposo",
	"description": "Build, edit, & explore your color theme for VS Code.",
	"icon": "resources/marketplace/logo-codeui.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"badges": [
		{
			"description": "version",
			"url": "https://img.shields.io/badge/codeui-0.1-red",
			"href": ""
		}
	],
	"contributes": {
		"configuration": {
			"title": "CodeUI",
			"properties": {
				"codeui.showNotifications": {
					"type": "boolean",
					"default": true,
					"description": "Show various notifications about CodeUI's activity."
				}
			}
		},
		"commands": [
			{
				"command": "toggleView",
				"title": "Toggle Standard/Palette View",
				"icon": {
					"light": "resources/light/view.svg",
					"dark": "resources/dark/view.svg"
				}
			},
			{
				"command": "customizeGroup",
				"title": "Customize...",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "customizeElement",
				"title": "Customize...",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "clearCustomization",
				"title": "Delete",
				"icon": {
					"light": "resources/light/clear.svg",
					"dark": "resources/dark/clear.svg"
				}
			},
			{
				"command": "copy",
				"title": "Copy"
			},
			{
				"command": "adjustBrightness",
				"title": "Adjust brightness...",
				"icon": {
					"light": "resources/light/brightness.svg",
					"dark": "resources/dark/brightness.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "elementTreeView",
					"title": "CodeUI",
					"icon": "resources/activityBar/activityBar.svg"
				}
			]
		},
		"views": {
			"elementTreeView": [
				{
					"id": "elementInfo",
					"name": "Info"
				},
				{
					"id": "elementsView",
					"name": "Elements"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "toggleView",
					"when": "view == elementsView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "customizeElement",
					"when": "viewItem == element",
					"group": "inline"
				},
				{
					"command": "clearCustomization",
					"when": "viewItem == element",
					"group": "inline"
				},
				{
					"command": "adjustBrightness",
					"when": "viewItem != standardGroup && view == elementsView",
					"group": "inline"
				},
				{
					"command": "copy",
					"when": "viewItem == element"
				},
				{
					"command": "customizeGroup",
					"when": "viewItem == paletteGroup",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/copy-paste": "1.1.30",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2",
		"vscode": "1.1.35"
	},
	"dependencies": {
		"@ctrl/tinycolor": "^2.5.3",
		"@types/copy-paste": "^1.1.30",
		"copy-paste": "^1.3.0",
		"jsonc-parser": "^2.1.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ryanraposo/codeui"
	}
}
